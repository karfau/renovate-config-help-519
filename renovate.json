{
  "extends": [
    "config:base",
    ":separateMultipleMajorReleases",
    ":rebaseStalePrs",
    ":unpublishSafe",
    ":semanticCommits"
  ],
  "masterIssue": true,
  "masterIssueTitle": "Dependencies Dashboard (Renovate Bot)",
  "prCreation": "not-pending",
  "prConcurrentLimit": 1,
  "packageRules": [
    {
      "packageNames": ["node"],
      "rangeStrategy": "replace"
    },
    {
      "packagePatterns": ["@bower_components\/.*"],
      "enabled": false
    },
    {
      "paths": ["+(package.json)"],
      "commitMessageSuffix": "[+(package.json)",
      "masterIssueApproval": true,
      "masterIssueTitle": "Angular Dependencies (Renovate)"
    },
    {
      "paths": ["src-react/*"],
      "commitMessageSuffix": "[src-react]"
    }
  ]
}
